generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Token {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String
  expires   DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phone     String
  plan      String
  email     String
  provider  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
